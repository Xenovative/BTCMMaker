{
  "name": "polymarket-btc-15min-bot",
  "version": "1.0.0",
  "description": "Automated trading bot for Polymarket Bitcoin 15-minute up/down markets",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "tsx watch src/backend/server.ts",
    "dev:frontend": "vite",
    "build": "tsc && vite build",
    "start": "node dist/backend/server.js",
    "test": "tsx src/test-connection.ts",
    "scan": "tsx src/market-scanner.ts"
  },
  "dependencies": {
    "@polymarket/clob-client": "^4.0.0",
    "ethers": "^5.8.0",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ws": "^8.16.0",
    "uuid": "^9.0.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/ws": "^8.5.10",
    "@types/uuid": "^9.0.8",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "vite": "^5.1.6",
    "@vitejs/plugin-react": "^4.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "lucide-react": "^0.344.0",
    "concurrently": "^8.2.2"
  }
}
